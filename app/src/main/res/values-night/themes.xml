<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.Restaurant" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Цвета -->
        <item name="colorPrimary">#FF6200EE</item>
        <item name="colorPrimaryVariant">#FF3700B3</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">#FF03DAC6</item>
        <item name="colorSecondaryVariant">#FF018786</item>
        <item name="colorOnSecondary">@android:color/black</item>

        <!-- Цвет статус-бара -->
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!-- ВАЖНО: включаем поддержку отступов под статус-бар -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

</resources>